<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.notice">

	<select id="selectNotice" resultType="com.scci.vo.NoticeVO" parameterType="com.scci.vo.NoticeVO">
		select notice_id , notice_title, notice_content, notice_date, user_id
		  from notice
         where 1=1
	     <if test="noticeTitle!=null and !noticeTitle.equals('')">
			and notice_title like concat(#{noticeTitle}, '%')
		</if>         		
	</select>
	<select id="selectFAQ" resultType="com.scci.vo.NoticeVO" parameterType="com.scci.vo.NoticeVO">
		select faq_id , faq_title, faq_content, user_id
		  from FAQ
         where 1=1
	     <if test="noticeTitle!=null and !noticeTitle.equals('')">
			and notice_title like concat(#{noticeTitle}, '%')
		</if>         		
	</select>

	<select id="selectContent" resultType="com.scci.vo.NoticeVO">
		select notice_id, notice_title, notice_content, notice_date, user_id
		from notice
		where notice_id = #{noticeId}
	<!-- 	<if test= 'value != null'>
			and notice_id = #{noticeId}
		</if> -->
	</select>
	<update id="updateNotice" parameterType="com.scci.vo.NoticeVO">
		UPDATE `arasil`.`notice`
		SET
		`NOTICE_TITLE` = #{noticeTitle},
		`NOTICE_CONTENT` = #{noticeContent},
		`NOTICE_DATE` = now(),
		`USER_ID` = #{userId}
		WHERE `NOTICE_ID` = #{noticeId}
	</update>
	<update id="updateFAQ" parameterType="com.scci.vo.NoticeVO">
		UPDATE `arasil`.`faq`
		SET
		`FAQ_TITLE` = #{faqTitle},
		`FAQ_CONTENT` = #{faqContent},
		`USER_ID` = #{userId}
		WHERE `FAQ_ID` = #{faqId}
	</update>

	<insert id="selectInsert" parameterType="com.scci.vo.NoticeVO">
		INSERT INTO `arasil`.`notice`
			(`NOTICE_TITLE`,
			`NOTICE_CONTENT`,
			`NOTICE_DATE`,
			`USER_ID`)
		values(
			#{noticeTitle}
			,#{noticeContent}
			,now()
			,#{userId}
			)
	</insert>
	<insert id="insertFAQ" parameterType="com.scci.vo.NoticeVO">
		INSERT INTO `arasil`. `FAQ`
			(`FAQ_TITLE`,
			`FAQ_CONTENT`,
			`USER_ID`)
		values(
			#{faqTitle}
			,#{faqContent}
			,#{userId}
			)
	</insert>

	<delete id="deleteNotice" parameterType="com.scci.vo.NoticeVO">
		DELETE FROM NOTICE WHERE NOTICE_ID=#{noticeId};
	</delete>


</mapper>